<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	<Script file="dict/longdao_enus2zhcn.lua"/>
	<Script file="leo_dict.lua"/>
	<!-- Frame to handle all core events -->
	<Frame name="leo_dict_core" movable="true" alpha="1" enableMouse="true" frameStrata="DIALOG" parent="UIParent" hidden="false" clampedToScreen="false">
		<Scripts>
			<OnLoad>
				this:RegisterEvent("VARIABLES_LOADED");
			</OnLoad>
			<OnEvent>
				if (event == "VARIABLES_LOADED") then
					leo_dict_init();
				end
			</OnEvent>
			<!--
			<OnEnter>
				this:Show();
			</OnEnter>
			<OnLeave>
				this:Hide();
			</OnLeave>
			-->
		</Scripts>

		<Size>
			<AbsDimension x="240" y="200" />
		</Size>
		<Anchors>
			<Anchor point="TOPRIGHT" relativeTo="Minimap" relativePoint="BOTTOMRIGHT">
				<Offset>
					<AbsDimension x="20" y="-20" />
				</Offset>
			</Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
		<Layers>
			<layer>

				<FontString name="leo_dict_data" inherits="GameFontNormalLarge" text="Usage: /ld word or phrase">
					<Size>
						<AbsDimension x="0" y="0" />
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-30" />
							</Offset>
						</Anchor>
					</Anchors>
					<FontHeight>
						<AbsValue val="16" />
					</FontHeight>
					<Color r="1" g="0.8196079" b="0" />
					<Shadow>
						<Color r="0" g="0" b="0" />
						<Offset>
						<AbsDimension x="1" y="-1" />
						</Offset>
					</Shadow>
				</FontString>

			</layer>
			<Layer>
				<Texture name="$parentTitleBorder" file="Interface\DialogFrame\UI-DialogBox-Header">
				<Size>
					<AbsDimension x="160" y="32" />
				</Size>
				<Anchors>
					<Anchor point="TOP">
					<Offset>
						<AbsDimension x="0" y="5" />
					</Offset>
					</Anchor>
				</Anchors>
				<TexCoords left="0.2" right="0.8" top="0" bottom="0.6" />
				</Texture>
				<FontString name="$parentTitleString" inherits="GameFontNormal" text="Leo Dictionary">
					<Size>
						<AbsDimension x="140" y="0" />
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-6" />
							</Offset>
						</Anchor>
					</Anchors>
					<FontHeight>
						<AbsValue val="12" />
					</FontHeight>
					<Color r="1" g="0.8196079" b="0" />
					<Shadow>
						<Color r="0" g="0" b="0" />
						<Offset>
						<AbsDimension x="1" y="-1" />
						</Offset>
					</Shadow>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>
